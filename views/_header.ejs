

<div id="header-body" style="background-image: linear-gradient(rgb(31, 226, 252),rgb(0, 187, 78));">
    
    <h1 id="pagetitle">Placement Cell</h1> 

    <a href="/"><i class="fas fa-home"></i></a>
    <i class="fas fa-battle-net"></i>
    <i class="fas fa-bell"></i>
    <ul>
        <% if (_locals.user){ %>
            <li>
                <button type="button">
                    <a href="/users/profile">
                        <%= _locals.user.name %>
                    </a>
                </button>
            </li>
            <li>
                <button type="button">
                    <a href="/users/signOut">Sign Out</a>
                </button>
            </li>
        <% }else{ %>
            <button type="button">
                <li>
                    <a href="/users/signIn">Sign In</a>
                </li>
            </button>
            <button type="button">
                <li>
                    <a href="/users/signUp">Sign Up</a>
                </li>
            </button>

        <% } %>
    </ul>

    <input type="text" placeholder="type here to search">
    <button><i class="fas fa-search"></i> Search</button>
</div>